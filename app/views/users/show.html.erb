<main class="container">
  <% flash.each do |type, msg| %>
 <div class="alert alert-danger">
   <%= msg %>
 </div>

<% end %>

  <div class="row border border-1">
  <div class="col ">
  <%= image_tag (@user.photo) unless @user.photo.nil? %>
  </div>
  <div class="col d-flex d-flex justify-content-evenly d-flex align-items-center">
    <p class="fs-3">
       <%= @user.name%>
       </p>

          <div class="fs-5">Number of posts: <%= @user.posts_counter || 0 %></div>

  </div>
  </div>
  <div class="row border border-1">
<%= @user.bio %>
    </div>
    <% @posts.each do  |post|%>
    <%= link_to (post.title),"/users/#{@user.id}/posts/#{post.id}" %>
    <%end %>




    <%= link_to "Create a post",   "/users/#{@user.id}/posts/new" ,class:"btn btn-warning mt-3 "%>
    <%= link_to "See all posts",   user_posts_path(@user.id) ,class:"btn btn-warning mt-3 ms-4"%>

  </main>
